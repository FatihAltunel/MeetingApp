@model List<UserInfo>
@{
    ViewBag.Title="Meeting Participation List";
}
<main class="text-center">
    <h1 class="h4">Meeting Participation List</h1>
    
    <table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Participation Status</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @{int i=0;}
        @foreach(var user in Model){
        <tr>
            <td>@user.Name</td>
            @if(@user.ParticipateStatus==true){
            <td class="table-success">Participating</td>
            i++;
            }else{
            <td class="table-danger">Not Participating</td>
            }
            <td><a asp-controller="Meeting" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Details</a></td>
        </tr>
        }
    </tbody>
</table>
    <div class="card">
        <div class=card-body>
            <span>Total Participants: @i</span>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go Home</a>
        </div>
    </div>
</main>